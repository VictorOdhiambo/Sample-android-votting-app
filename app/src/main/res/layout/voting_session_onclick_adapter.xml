<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/position"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/admin_leader_dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/b1"
                    android:layout_width="85dp"
                    android:layout_height="85dp" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/admin_leader_position"
                        android:text="The President"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/vote"
                        android:text="300 Votes"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/details"
                android:layout_below="@+id/position"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Name    "
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_leader_name"
                        android:text="Victor Programmer"
                        android:textStyle="normal"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Reg No. "
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_leader_regno"
                        android:text="IN00/12345/00"
                        android:textStyle="normal"
                        android:layout_marginLeft="17dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Year "
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_leader_year"
                        android:text="4.1"
                        android:textStyle="normal"
                        android:layout_marginLeft="43dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <android.support.design.button.MaterialButton
                android:id="@+id/postCandidate"
                android:background="@color/welcome_bg_color"
                android:textColor="#eee"
                app:cornerRadius="5dp"
                android:layout_below="@+id/details"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:layout_width="250dp"
                android:text="Post as Winner"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
